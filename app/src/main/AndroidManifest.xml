<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appspot.nkek.daykeeper">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/appicon_3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.CenterAnimation">
        <activity android:name=".SplashActivity" android:theme="@style/AppTheme.CenterAnimation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.StartInfoActivity" android:theme="@style/AppTheme.NoActionBarFullScreen"/>
        <activity
            android:name=".View.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.NavigationDrawerActivity"></activity>
    </application>

</manifest>